{
  "requires": [
    "openssl",
    "libevent",
    "curl",
    "boost-libs"
  ],
  "single_source": {
    "kind": "git",
    "git": "https://github.com/jieyu/mesos",
    "ref": "9f9e7d94f1ffec56a4a002bd48b7e47150af943f",
    "ref_origin": "memfd"
  },
  "environment": {
    "JAVA_LIBRARY_PATH": "/opt/mesosphere/lib",
    "MESOS_NATIVE_JAVA_LIBRARY": "/opt/mesosphere/lib/libmesos.so"
  },
  "state_directory": true,
  "sysctl": {
    "dcos-mesos-slave": {
      "vm.max_map_count": 262144,
      "vm.swappiness": 1
    },
    "dcos-mesos-slave-public": {
      "vm.max_map_count": 262144,
      "vm.swappiness": 1
    }
  }
}
